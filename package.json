{
  "name": "@chatgame/monorepo",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "description": "Chat Game for Twitch",
  "author": "Nick Kosarev <hmbanan666@hotmail.com>",
  "license": "MIT",
  "homepage": "https://chatgame.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hmbanan666/chatgame.git"
  },
  "keywords": [
    "game",
    "online",
    "twitch",
    "stream",
    "chatgame"
  ],
  "engines": {
    "node": ">=22.21.0",
    "pnpm": ">=10.19.0"
  },
  "scripts": {
    "release": "bumpp --execute=\"npm run release:prepare\" --recursive",
    "release:prepare": "pnpm run build",
    "dev:generate-cert": "mkdir -p .cert && mkcert -key-file ./.cert/localhost-key.pem -cert-file ./.cert/localhost.pem 'app.local'",
    "build": "pnpm -r run build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "clean": "pnpm -r run clean",
    "clean:modules": "pnpm -r run clean:modules && rm -rf node_modules",
    "typecheck": "pnpm -r run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check:full": "pnpm run lint:fix && pnpm run typecheck && pnpm vitest run",
    "prepare": "husky"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:dev",
    "@commitlint/cli": "catalog:dev",
    "@commitlint/config-conventional": "catalog:dev",
    "@vitest/browser": "catalog:test",
    "@vitest/coverage-v8": "catalog:test",
    "bumpp": "catalog:dev",
    "eslint": "catalog:dev",
    "husky": "catalog:dev",
    "lint-staged": "catalog:dev",
    "playwright": "catalog:test",
    "vitest": "catalog:test",
    "vitest-browser-vue": "catalog:test"
  },
  "resolutions": {
    "unimport": "4.1.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json}": [
      "eslint --cache --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
